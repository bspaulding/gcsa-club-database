<%= link_to 'Back to Index', groups_path %>

<div id="group_name"><%= @group.name %></div>
<div id="group_status">
	<em><b>Status:</b> 
	<% if @group.on_probation %>
		<div style="font-weight:bold;color:red;display:inline;">On Probation</div>
	<% elsif @group.active %>
	 	Active
	<% else %>
	 	Inactive
	<% end %>
	</em>
</div>
<p><b>Leader:</b>
<% if !@group.leader_name.nil? -%>
	<% if @group.leader_name.size != 0 -%>
		<%= mail_to("#{@group.leader_name}@gordon.edu") %>
	<% else -%>
		None
	<% end -%>
<% else -%>
	None
<% end -%></p>
<p><b>Description</b><br/>
<%= @group.description %></p>